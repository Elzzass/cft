<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="top|center"
    android:weightSum="100"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_weight="90"
        tools:listitem="@layout/cell" />

    <TextView
        android:id="@+id/okhttp_response_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="RESPONSE"
        android:layout_weight="10"
        android:textSize="20sp" />

    <Button
        android:id="@+id/http_request_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REQUEST" />
    <Button
        android:id="@+id/delete_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Очистить" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="left|top"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <EditText
            android:id="@+id/etWidth1"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:hint="Введите сумму в рублях"
            android:inputType="numberDecimal">

        </EditText>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="101dp"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/convert_sum_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="000.000"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>