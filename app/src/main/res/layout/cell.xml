<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:gravity="start|top">


    <TextView
        android:id="@+id/valute_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Австралийский доллар"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/white"
        android:textSize="28sp" />
    <TextView
        android:id="@+id/valute_char_code_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Код валюты: "
        android:layout_margin="5dp"
        android:layout_below ="@+id/valute_name_textview"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/valute_char_code_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AUD"
        android:layout_margin="5dp"
        android:layout_below ="@+id/valute_name_textview"
        android:layout_toEndOf = "@+id/valute_char_code_label_textview"
        android:textColor="@android:color/white"
        android:textSize="28sp" />
    <TextView
        android:id="@+id/valute_nominal_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Номинал валюты: "
        android:layout_margin="5dp"
        android:layout_below ="@+id/valute_char_code_textview"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/valute_nominal_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_margin="5dp"
        android:layout_below ="@+id/valute_char_code_textview"
        android:layout_toEndOf = "@+id/valute_nominal_label_textview"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/valute_value_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Курс текущий: "
        android:layout_margin="5dp"
        android:layout_below ="@+id/valute_nominal_textview"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/valute_value_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="777.777"
        android:layout_margin="5dp"
        android:layout_below ="@+id/valute_nominal_textview"
        android:layout_toEndOf = "@+id/valute_value_label_textview"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/valute_prev_value_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Курс прошлый: "
        android:layout_margin="5dp"
        android:layout_below ="@+id/valute_value_textview"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/valute_prev_value_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="999.123"
        android:layout_margin="5dp"
        android:layout_below ="@+id/valute_value_textview"
        android:layout_toEndOf = "@+id/valute_value_label_textview"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/valute_id_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: "
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"
        android:layout_below ="@+id/valute_prev_value_label_textview"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/valute_id_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R01010"
        android:layout_margin="5dp"
        android:layout_below ="@+id/valute_prev_value_textview"
        android:layout_toEndOf = "@+id/valute_id_label_textview"
        android:textColor="@android:color/white"
        android:textSize="28sp" />



    <TextView
        android:id="@+id/valute_num_code_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NumCode: "
        android:layout_margin="5dp"
        android:layout_below ="@+id/valute_prev_value_textview"
        android:layout_toEndOf = "@+id/valute_id_textview"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/valute_num_code_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="036"
        android:layout_margin="5dp"
        android:layout_below ="@+id/valute_prev_value_textview"
        android:layout_toEndOf = "@+id/valute_num_code_label_textview"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

</RelativeLayout>

